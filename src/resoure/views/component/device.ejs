<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/style/footerstyle.css" />
    <link rel="stylesheet" href="/src/resoure/public/style/device.css" />
    <link rel="stylesheet" href="/src/resoure/public/style/device-transf.css" />
    <link
      rel="stylesheet"
      href="/src/resoure/public/style/device-comment.css"
    />
    <!-- <link rel="stylesheet" href="" /> -->
  </head>
  <body>
    <nav class="navbar">
      <div class="main-char">
        <div class="go">
          <div class="character"></div>
        </div>
      </div>

      <a class="logo" href="#">TSON SHOP ></a>
      <ul class="menu">
        <li><a href="/">TRANG CHỦ</a></li>
        <li class="dropdown">
          <a href="#">SẢN PHẨM &#9662;</a>
          <ul class="dropdown-menu">
            <li><a href="#">ĐIỆN THOẠI</a></li>
            <li><a href="#">PC-LAPTOP</a></li>
            <li><a href="#">MÁY TÍNH BẢNG</a></li>
          </ul>
        </li>
        <li><a href="#">TIN TỨC</a></li>
        <li><a href="#">GIỚI THIỆU</a></li>
        <li><a href="/contact">LIÊN HỆ</a></li>
      </ul>
    </nav>

    <div class="mt-4">
      <div class="row">
        <div class="col-lg-6">
          <div class="device-container">
            <h2 class="device-name"><%= courses.nameDevice %></h2>
            <img
              src="<%= courses.image %>"
              alt="Omega-X"
              class="device-image"
            />
            <div class="buy-main">
              <h2 class="device-price"><%= courses.price %></h2>
              <div class="logo-bt"></div>
              <div class="image-container">
                <img
                  src="https://allimages.sgp1.digitaloceanspaces.com/tailieu247eduvn/2022/06/1656128419_306_Anh-Sale-Dep-Sang-Tao-Cuc-Ky-An-Tuong-Thu.jpg"
                  alt="Omega-X"
                  class="logo-sale"
                />
              </div>
              <button class="btn-buy">Mua Ngay</button>
            </div>

            <div class="device-details"><%= courses.description %></div>
          </div>
        </div>
        <div class="col-lg-3">
          <h2>VIDEO REVIEW</h2>

          <iframe
            width="560"
            height="315"
            src="https://www.youtube.com/embed/<%= courses.rwVideo %>"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
          <div id="comments">
            <form id="comment-form">
              <label for="name">Name:</label>
              <input type="text" id="name" name="name" required />

              <label for="comment">Comment:</label>
              <textarea id="comment" name="comment" required></textarea>

              <button type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    const prices = document.querySelectorAll('.device-price');

    prices.forEach((price) => {
      const formattedPrice = parseInt(price.textContent).toLocaleString(
        'vi-VN',
        { style: 'currency', currency: 'VND' }
      );
      price.textContent = formattedPrice;
    });
  </script>
</html>
