<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <style>
      body {
        width: 100%;
        height: auto;
      }
      .main {
        max-width: 100%;
        display: flex;
        height: auto;
        overflow: hidden;
        padding-left: 10px;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="main">
      <div class="row">
        <% courses.forEach(function(doc) { %>
        <div class="fullform" style="display: flex">
          <div class="card" style="width: 18rem; margin-left: 10px">
            <img
              class="card-img-top"
              src="<%= doc.image %>"
              alt="Card image cap"
            />
            <div class="card-body">
              <h5 class="card-title"><%= doc.name %></h5>
              <p class="card-text"><%= doc.description %></p>
              <a href="/devices/<%= doc.slug %>" class="btn btn-primary"
                >Xem h√†ng</a
              >
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
